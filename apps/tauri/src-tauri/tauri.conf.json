{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clockwork Menubar",
  "version": "0.1.4",
  "identifier": "com.clockwork-menubar",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Clockwork Menubar",
        "width": 302,
        "height": 540,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "backgroundColor": "#00000000",
        "alwaysOnTop": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
